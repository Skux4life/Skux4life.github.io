import JavaSvg from "../assets/icons/java.svg";
import K6Svg from "../assets/icons/k6.svg";
import AwsSvg from "../assets/icons/aws.svg";
---

<div class="scroll">
  <div class="m-scroll">
    <TechIcon image={AstroSvg.src} label="Astro" />
    <TechIcon image={ReactSvg.src} label="React" />
    <TechIcon image={NodeSvg.src} label="NodeJS" />
    <TechIcon image={TailwindSvg.src} label="TailwindCSS" />
