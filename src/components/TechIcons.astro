<style>
  .scroll {
    position: relative;
    /* width: 100vw; */
    overflow: hidden;
    z-index: 1;
    margin: 0;
    padding: 0;
  }

  .m-scroll {
    overflow: hidden;
    height: 100%;
    white-space: nowrap;
    animation: scrollText 50s infinite linear;
    margin: 0;
    display: flex;
    gap: 4em;
    justify-content: space-between;
    width: max-content;
  }

  span {
    display: inline-block;
    margin: 0;
    padding: 0;
  }

  @keyframes scrollText {
    from {
      transform: translateX(0%);
    }
    to {
      transform: translateX(-50%);
    }
  }
</style>
