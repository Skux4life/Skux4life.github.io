---
import { getCollection } from "astro:content";
let allProjects = await getCollection("projects");
allProjects = allProjects.slice(0, 3);
import ProjectCard from "../components/ProjectCard.astro";
---

<div>
  <div class="other-cool-heading">
    <div class="other-curved-rectangle"></div>
    <h2>Projects</h2>
    <p>Some things I like to think I'm good at.</p>
  </div>

  <div>
    {
      allProjects.map((card) => (
        <ProjectCard
          url={`/projects/${card.slug}/`}
          image={card.data.image.url}
          title={card.data.title}
          body={card.data.description}
        />
      ))
    }
  </div>
</div>

<style>
  .other-cool-heading {
    margin-top: 2rem;
    margin-bottom: 2rem;
    position: relative;
    height: 200px;
  }

  h2 {
    position: absolute;
    top: 25%;
    right: 6.5%;
  }

  p {
    margin-top: 150px;
    float: left;
    text-align: left;
  }

  @media only screen and (max-width: 600px) {
    .other-cool-heading h2 {
      right: 10%;
    }

    p {
      max-width: 200px;
    }
  }
</style>
